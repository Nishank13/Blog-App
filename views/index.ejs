<%- include("partials/header") %>

<div class="ui main text container">
	<div class="ui huge header">RESTful BlogApp</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
		<% blog.forEach(function(blog){ %>
			<div class="item">
				<div class="image">
					<img src="<%= blog.image %>">	
				</div>
				<div class="content">
					<a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>		
				</div>
				<div class="meta">
					<span><%= blog.created.toDateString() %></span>	
				</div>
				<div class="description">
					<p style="font-weight: normal;"><%= blog.body.substring(0, 100) %>....</p>
				</div>
				<div>
					<a class="ui floated basic voilet button" href="/blogs/<%= blog._id %>">
						Read More
						<i class="right chevron icon"></i>
					</a>		
				</div>
			</div>
		<% }) %>
		</div>
	</div>
</div>


<%- include("partials/footer") %>